<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_gravity="center"
    android:layout_centerVertical="true"
    android:padding="10dp">
    <LinearLayout
        android:layout_marginTop="13dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bcg_linear_layout">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@color/colorPrimary">

            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:text="Stars"
                android:textColor="@color/colorWhite"
                android:textSize="18sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_stars"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:paddingStart="5dp">

            </androidx.recyclerview.widget.RecyclerView>

        </LinearLayout>

        <Button
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:id="@+id/btn_ok"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:background="@drawable/btn_view"
            android:fontFamily="@font/roboto_medium"
            android:text="OK"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="14sp"
            />

    </LinearLayout>

<ImageView
    android:id="@+id/star_1"
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:src="@drawable/ic_star_clciked_24px"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"/>

    <ImageView
    android:id="@+id/star_2"
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:src="@drawable/ic_star_clciked_24px"
    android:layout_alignParentTop="true"
    android:layout_toEndOf="@id/star_1" />
    <ImageView
        android:id="@+id/star_3"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_star_clciked_24px"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@id/star_1" />

    <TextView
        android:id="@+id/tv_star_no_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:fontFamily="@font/roboto"
        android:gravity="center"
        android:text="Нет данных"
        android:textColor="@color/colorTextPrimary"
        android:textSize="18sp"
        android:visibility="invisible"/>

</RelativeLayout>