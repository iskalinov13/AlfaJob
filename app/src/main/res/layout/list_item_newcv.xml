<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="@drawable/bcg_card"
    android:id="@+id/newcv">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_title_newcv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/roboto_medium"
            android:text="UI Designer"
            android:textColor="#000000"
            android:textSize="18sp"
            android:layout_gravity="center_vertical"/>

        <ImageView
            android:id="@+id/iv_delete_newcv"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_delete"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_email_newcv"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_email_newcv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_email"
            android:layout_marginRight="10dp"
            android:gravity="left|center_vertical"/>

        <TextView
            android:id="@+id/tv_email_newcv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:text="iskalinov13@mail.ru"
            android:textColor="@color/colorTextNewCV"
            android:textSize="16sp"
            android:gravity="left|center_vertical"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_phone_newcv"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_phone_newcv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_call"
            android:layout_marginRight="10dp"
            android:gravity="left|center_vertical"/>

        <TextView
            android:id="@+id/tv_phone_newcv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:text="87474193518"
            android:textColor="@color/colorTextNewCV"
            android:textSize="16sp"
            android:gravity="left|center_vertical"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right">

        <Button
            android:id="@+id/btn_view_newcv"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:textAlignment="center"
            android:background="@drawable/btn_view"
            android:fontFamily="@font/roboto_medium"
            android:text="VIEW"
            android:textColor="@color/colorWhite" />

        <Button
            android:id="@+id/btn_apply_newcv"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:textAlignment="center"
            android:layout_marginLeft="5dp"
            android:background="@drawable/btn_apply"
            android:fontFamily="@font/roboto_medium"
            android:text="APPLY"
            android:textColor="@color/colorWhite" />
    </LinearLayout>





</LinearLayout>